{% assign hader__class = section.settings.header_style  %}

<header class="site-header header--{{ hader__class }}" role="banner">
</header>

{% schema %}
    {
      "type": "select",
      "id": "header_style",
      "label": "Header style",
      "default": "normal",
      "options": [
        { "label": "Normal", "value": "normal" },
        { "label": "Sticky", "value": "sticky" }
      ]
    }

{% endschema %}